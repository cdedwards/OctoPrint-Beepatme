<h3>{{ _('Beep At Me') }}</h3>
<form class="form-horizontal">
    <div class="control-group">
        <label class="control-label">{{ _('Volume') }}</label>
        <div class="controls">
            <div class="input-append">
                <input type="number" min="0" max="100" step="1" class="input-mini" data-bind="value: settings.plugins.beepatme.audioVolume">
                <span class="add-on">%</span>
            </div>
            <span class="help-block">{{ _('Audio volume level: 0 - 100') }}%</span>
            <button class="btn btn-block" style="width: 169px" data-bind="click: function() { $root.playAudio() }">{{ _('Test Audio') }}</button>
        </div>
    </div>
